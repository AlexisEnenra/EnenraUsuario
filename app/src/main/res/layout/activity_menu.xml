<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">


    <Button
        android:id="@+id/button_contactos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:text="Contactos"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="228dp"
        android:layout_height="102dp"
        android:layout_marginTop="176dp"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Menu"
        android:textColor="@color/colorAccent"
        android:textSize="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_monitorizarhumo"
        android:layout_width="160dp"
        android:layout_height="61dp"
        android:background="@drawable/button_rounded"
        android:text="Monitorizazr Temperatura"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/button_monitorizarollin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.724" />

    <Button
        android:id="@+id/button_historial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:background="@drawable/button_rounded"
        android:text="Historial"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/Button_cerrarSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_monitorizarollin"
        android:layout_width="153dp"
        android:layout_height="59dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_rounded"
        android:text="Monitorizar Humo"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/button_historial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Button_cerrarSesion"
        android:layout_width="194dp"
        android:layout_height="45dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_rounded"
        android:text="Cerrar Sesion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>